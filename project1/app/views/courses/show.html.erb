<p id="notice"><%= notice %></p>
<center>

<p>
  <strong style="color:PaleVioletRed;font-family:Times New Roman; font-size: 40px">Title:</strong>
  <%= @course.title %>
</p>

<p>
  <strong style="color:PaleVioletRed;font-family:Times New Roman; font-size: 40px">User:</strong>
  <%= @course.user.name %>
</p>
<% if current_user.try(:name) == @course.user.try(:name) %>
<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
<% else %>
<%= link_to 'Back', courses_path %>
<% end %>
<br>
 <h2>Course Lectures:</h2>
<% @lectures.each do |lecture| %>

     <br>
  <%= link_to lecture.content, lecture , :class=>"list-group-item list-group-item-info" %>
  <% end %>
</center>
