<p id="notice"><%= notice %></p>



<center><h1 class="alert-warning"  style="color:PaleVioletRed;font-family:Times New Roman; font-size: 80px">Our Courses</h1>
</center>
<table>
  <thead>
    <tr class="alert-info">
      <th>Title</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr class="alert-danger">

        <td><%= course.title %></td>
      <td><%= course.user.name %> </td>
        <% if current_user.try(:name) == course.user.try(:name) %>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td> <%= link_to 'Edit', edit_course_path(course) %></td>
        <%else %>
        <td><%= link_to 'Show', course %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
